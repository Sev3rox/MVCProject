<table class="table">
    @foreach (var item in ViewBag.Messages)
    {
        <tr>
            <td>
                @if (item.User.Image != null)
                {
                    <img src="@string.Format("data:image/png;base64,{0}", Convert.ToBase64String(item.User.Image))" />
                }
            </td>
            <td id="temp">
                @(new HtmlString(item.Content.ToString()))
            </td>
            <td>
                @item.User.UserName
            </td>
            <td>
                @Html.ActionLink("DeleteMsg", "DeleteMsg", new { id = item.MessageId, id2 = Model.ThreadId }, null) |
                @Html.ActionLink("EditMsg", "EditMsg", new { id = item.MessageId, id2 = Model.ThreadId }, null)
            </td>
        </tr>
    }
</table>

